
{% extends 'base.html.twig' %}

{% block title %}Page d'accueil du Site{% endblock %}

{% block body %}

<div class="container">

    <div class="row">

        {% for ville in listeVilles %}

        <div class="col">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="/img/{{ville.image}}" alt="{{ville.name}}" width="500">
                <div class="card-body">
                    <h5 class="card-title">{{ville.name}}</h5>
                    <p class="card-text">{{ville.codePostal}}</p>
                    <p class="card-text">{{ville.population}}</p>
                    <a href="{{ path('admin_ville_show',{id:ville.id})}}" class="btn btn-primary">Voir
                        d√©tail</a>
                </div>
            </div>
        </div>

        {% endfor %}

    </div>


</div>
{% endblock %}